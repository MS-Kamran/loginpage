# Google OAuth 2.0 Configuration
# Get these from Google Cloud Console: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Get these from Facebook Developers: https://developers.facebook.com/
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
PORT=5001

# Security Keys (generate secure random keys for production)
SECRET_KEY=your-super-secret-flask-key-here
JWT_SECRET=your-jwt-secret-key-here

# Session Security (set to true for HTTPS in production)
SESSION_COOKIE_SECURE=false

# OAuth Redirect URI (update for your domain)
GOOGLE_OAUTH_REDIRECT_URI=http://localhost:5000/auth/google

# Allowed Origins (comma-separated list for production)
ALLOWED_ORIGINS=http://localhost:5000

# Database URL (if using a database in production)
# DATABASE_URL=postgresql://user:password@localhost/dbname

# Deployment Configuration
# PORT=5000

# Logging Level
# LOG_LEVEL=INFO